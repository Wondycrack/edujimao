<%= link_to product_path(product.id) do  %>
  <div class= "container">
    <div class="card mb-3" style="max-width: 1400px;">
      <div class="row no-gutters">
        <div class="col-md-4" style= "text-align: center; height: 192px;
              margin-left: -15px;">
          <%= image_tag "Edtech.jpeg",class:"card-img" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="card-text ">
              <h2><%= product.name %></h2>
              <p><%= product.product_type %></p>
              <p><%= product.description %></p>
              <p><%= product.curriculum_type %></p>
              <p class="card-text"><small class="text-muted"></small></p>
              <% if current_user.id == product.user_id %>
                <%= link_to 'delete', product_path(product.id), method: :delete %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
