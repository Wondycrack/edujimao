<div style="max-width: 900px; min-height: 100vh; margin: auto;" class="py-3 container">
  <div class="d-flex justify-content-between align-items-center m-3">
    <h2>Add a new product</h2>
  </div>

  <div class="w-100">
    <div class="container pt-5 text-center">
      <%= simple_form_for (@product) do |f| %>
        <div class="form-group text-left mb-4">
          <%= f.input :name, input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>
        <div class="form-group text-left mb-4">
          <%= f.input :curriculum_type, collection: ["Core Curriculum", "Supplemental"], input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>
        <div class="form-group text-left mb-4">
          <%= f.input :cost, collection: ["Free", "Freemium", "License", "Usage Based", "Price One Time Pruchase"], input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>
        <div class="form-group text-left mb-4">
          <%= f.input :age_group, collection: ["Elementary School", "Middle School", "High School"], input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>
        <div class="form-group text-left mb-4">
          <%= f.input :product_type, collection: ["Math", "English", "Physics"], input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>
        <div class="form-group text-left mb-4">
          <%= f.input :description, input_html: { class: 'form-control' }, label_html: { style: 'color: grey; font-size: 18px;' } %>
        </div>

        <div class="form-group text-left mb-4">
          <%= f.label :logo %>
          <%= f.file_field :logo %>
        </div>

        <div class="form-group text-left mb-4">
          <%= f.label :file %>
          <%= f.file_field :file %>
        </div>

        <%= f.submit "Add", class: "btn btn-lg btn-outline-primary px-5" %>

      <% end %>
    </div>
  </div>
</div>






