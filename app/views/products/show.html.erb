
<h2>Product</h2>
<h3><%= @product.name %></h3>
<p><%= @product.description %></p>
<p>Subject: <%= @product.product_type %> </p>
<p>Curriculum: <%= @product.curriculum_type %></p>
<p>Age group: <%= @product.age_group %></p>
<p>Cost: <%= @product.cost %></p>

<%= link_to 'View all requests', service_requests_path(product_id: @product.id) %>

<!-- START of search bar -->
<%= form_tag product_path(@product), method: :get do %>
  <%= text_field_tag :query,
      params[:query],
      class: "form_control string required",
      placeholder: "find a school" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<!-- END of search bar -->


<!-- <%#= link_to 'All products', products_path %> | <%#= link_to 'Book', products_path %> -->
<p><h3>Search for partner school/s</h3></p>
<% @schools.each do |school| %>
<p><%= school.name %> <%= link_to 'Request to Connect', service_requests_path(product_id: @product.id, school_id: school.id), method: :post %> </p>
<% end %>
