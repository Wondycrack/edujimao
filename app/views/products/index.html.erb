<!-- Sidebar -->
<div style="max-width: 900px; min-height: 100vh; margin: auto;" class="py-3">
  <%#= render '/layouts/side_bar' %>

  <div class="d-flex justify-content-between align-items-center m-3">
    <h2>Education Products</h2>
    <%= link_to 'Add a product', new_product_path, class: "btn btn-lg btn-primary" %>
  </div>

  <!-- Page Content -->
  <div id="page-content-wrapper" class="py-4">
    <div class="container-fluid">
      <% @products.each do |product|%>
        <%= render 'product', product: product %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
