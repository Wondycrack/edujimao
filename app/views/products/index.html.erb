<div>
  <% @products.each do |product|%>


    <%= link_to product_path(product.id) do  %>
      <!-- <div class="wrapper"> -->

          <div class= "container">
            <div class="card mb-3" style="max-width: 1400px;">
              <div class="row no-gutters">
                <div class="col-md-4" style= "text-align: center;">
                  <%= image_tag "Marie LaVeau.jpeg",class:"card-img" %>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <p class="card-text ">
                      <h2><%= product.name %></h2>
                      <p><%= product.product_type %></p>
                      <p><%= product.description %></p>
                      <p><%= product.curriculum_type %></p>

                    <p class="card-text"><small class="text-muted"></small></p>
                      <div>

                 <% if current_user.id == product.user_id %>
                 <%= link_to 'delete', product_path(product.id), method: :delete %>
                  <% end %>

                  </div>
                 </div>

                </div>
              </div>
            </div>
          </div>
      <!-- </div> -->
    <% end %>
  <%end  %>

<div>
<%= link_to 'Add a product', new_product_path %>
</div>


</div>



