<h1>My Products!</h1>

<%= link_to 'Add a product', new_product_path %>

<% @products.each do |product|%>
    <h2> <%= link_to product.name, product_path(product.id) %> </h2>
    <p><%= product.product_type %></p>
    <p><%= product.description %></p>
    <p><%= product.curriculum_type %></p>
    <%= link_to 'Delete', product_path(product.id), method: :delete %>
<%end  %>
