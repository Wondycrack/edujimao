<%= link_to school_path(school), class: 'col-6 p-4' do %>
  <div class="card-body-content school-card">
    <div class="mb-5 d-flex justify-content-between" style="max-width: 1400px;">
      <%= image_tag url_for(school.logo), class:"card-img2" %>
      <h5 class="mt-3"><span class="badge badge-pill badge-primary"><%= school.province.name %></span></h5>
    </div>

    <div class="">
      <div class="">
        <h4 class="card-subtitle mb-3"><%= school.name %></h4>
        <%#= link_to school.name, school_path(school) %>
        <div class="d-flex align-items-center w-100 mb-2">
          <div class="w-50 text-muted">Type</div>
          <div><%= school.school_type %></div>
        </div>
        <div class="d-flex align-items-center w-100 mb-2">
          <div class="w-50 text-muted">Curriculums</div>
          <div><%= school.curiculum_type %></div>
        </div>
        <div class="d-flex align-items-center w-100">
          <div class="w-50 text-muted">Students enrolled</div>
          <div><%= school.student_enrolment %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
