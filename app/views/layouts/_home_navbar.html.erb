<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "E|J|M", root_path, class: "navbar-brand" %>

    <%#= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% navs = [
        {name: 'Home', path: root_path },
        {name: 'About', path: about_path },
        {name: 'Products', path: all_products_path }
        ] %>

      <% navs.each do |nav| %>
        <!-- add 'active' to class for active nav -->
        <li class="nav-item">
          <%= link_to nav[:name], nav[:path], class: "nav-link" %>
        </li>
      <% end %>

      <% if user_signed_in? %>

        <li class="nav-item">
          <%= link_to 'Schools', schools_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to 'Dashboard', products_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown ml-3">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to current_user.email, "#", class: "dropdown-item" %>
            <%= link_to "Logout", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

