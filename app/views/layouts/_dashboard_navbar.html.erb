<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon">
  <%= link_to "E|J|M", root_path, class: "navbar-brand" %>

    <%#= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <div class="mr-5">
        <%= form_tag schools_path, method: :get, class: "input-group" do %>
          <%= text_field_tag :query, '', class: "form-control" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "input-group-text", id: "basic-addon2" %>
          </div>
        <% end %>
      </div>

      <!-- DASHBOARD NAVBAR -->
      <% navs = [
        {name: 'My Products', path: products_path },
        {name: 'Schools', path: schools_path },
        {name: 'Requests', path: schools_path }
        ] %>

      <% navs.each do |nav| %>
        <!-- add 'active' to class for active nav -->
        <li class="nav-item">
          <%= link_to nav[:name], nav[:path], class: "nav-link" %>
        </li>
      <% end %>

      
      <% if user_signed_in? %>   
        <li class="nav-item dropdown ml-3">
          <%= image_tag "ron.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to current_user.email, "#", class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: 'delete', :class => 'dropdown-item'%>
          </div>
        </li>
      <% end %>
      



    </ul>
  </div>
</div>

